<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_chitiettruyen">

    <ImageView
        android:id="@+id/chitiettruyen_imgquaylai"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_left"
        tools:ignore="OnClick">
    </ImageView>
    
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/chitiettruyen_imgAvatar"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="20dp">
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp">
            <TextView
                android:id="@+id/chitiettruyen_tvTentruyen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginStart="20dp"
                android:text="Tinh te nam than la ba ta"
                android:textSize="25sp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/chitiettruyen_tvTrangthai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="[FULL] 76 chuong"
                android:textSize="20sp"
                android:layout_marginTop="8dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="text"
        android:text="Ná»™i dung"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/scrollViewtomtat"
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:layout_above="@+id/bottomToolbar"
        android:layout_below="@+id/editTextText"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/chitiettruyen_tvnoidungtruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/noidungtruyen"
            android:textAlignment="viewStart" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomToolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#805CBF">

        <ImageView
            android:id="@+id/chitiettruyen_imgvBinhluan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_comment"
            android:layout_gravity="center"
            android:layout_marginStart="20dp">

        </ImageView>

        <ImageView
            android:id="@+id/chitiettruyen_imgvDanhsachchuong"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/list_truyen"
            android:layout_gravity="center"
            android:layout_marginStart="20dp">
        </ImageView>

    </LinearLayout>

</RelativeLayout>